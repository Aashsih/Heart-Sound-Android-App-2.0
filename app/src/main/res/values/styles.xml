<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- FilterFragmentStyles -->
    <style name="filterFragmentDialog">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">8dp</item>

    </style>


    <!-- Layout Padding -->
    <style name="layoutPadding">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <!-- Patient HeartSound Fragments Top padding -->
    <style name="rootLayoutPadding" parent="layoutPadding">
        <item name="android:paddingTop">50dp</item>
    </style>

    <!-- View Separation -->
    <style name="viewSeparation">
        <item name="android:paddingTop">30dp</item>
    </style>


    patientHeartSoundFragmentViewPadding
</resources>
